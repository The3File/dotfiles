#!/usr/bin/env bash

percent="$(acpi -b | sed 's/,//g; s/://g; s/%//g' | awk '{print $4}')"
state="$(acpi -b | sed 's/,//g; s/://g; s/%//g' | awk '{print $3}')"

if [[ $state = Discharging ]];then
	[[ $percent -ge 80 ]] && state=""
	[[ $percent -le 80 ]] && state=""
	[[ $percent -le 65 ]] && state=""
	[[ $percent -le 35 ]] && state=""
	[[ $percent -le 15 ]] && state=""
fi
	[[ $state = Charging ]] && state=""

[[ $percent -le "16" ]] && echo -e "<span color='red'>$state  $percent%</span>\n" || echo "$state  $percent%"
exit 0
