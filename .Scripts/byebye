#!/usr/bin/env bash

ask=$( echo -e "shutdown\nreboot\nlogout\nrestart wm" \
    | rofi -dmenu -i -p "ï€‘ power")
#| dmenu -nf white -nb black -h 25 -b -i -p "Hvad vil du?:" ) 

[[ $ask = "logout" ]] && pkill xinit
[[ $ask = "shutdown" ]] && shutdown now
[[ $ask = "reboot" ]] && reboot
[[ $ask = "restart wm" ]] && i3-msg restart
