#!/usr/bin/env bash

case $1 in
   on)
      wal --theme base16-gruvbox-hard
      source /home/ringdal/.cache/wal/colors.sh

      ln -sf "$HOME/.cache/wal/dunstrc" "$HOME/.config/dunst/dunstrc" &
      feh --bg-fill "$HOME/Billeder/wallpapers/arch/black_arch.png"

      pkill dunst && dunst &>/dev/null & disown

      for i in {1..10}; do
	 bspc config -d $i left_padding 0
	 bspc config -d $i right_padding 0
      done

      bspc config focused_border_color "$color4"
      bspc config window_gap 1
      bspc config border_width 1

      runbar & disown

      wal --theme base16-isotope
      ;;
   off)
      ukill runbar
      pkill lemonbar

      bspc config top_padding 0

      "$HOME/Billeder/favoritter/chris-becker-52648-unsplash.jpg.sh"

      ~/.config/bspwm/bspwmrc &>/dev/null
      #stmessage
esac
