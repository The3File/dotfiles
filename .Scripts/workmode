#!/usr/bin/env bash

on (){
    bspc config focused_border_color \#337cff
    killall compton
    feh --bg-fill /home/ringdal/Billeder/wallpapers/arch/black.jpg
    ukill autogap
    bspc config left_padding 0
    bspc config right_padding 0
    bspc config window_gap 0
    xrdb $HOME/.Xresources
}

off (){
    wal -Rq
    $HOME/.config/bspwm/bspwmrc &>/dev/null
}

[[ $1 = "on" ]] && on
[[ $1 = "off" ]] && off
