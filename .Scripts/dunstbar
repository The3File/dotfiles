#!/usr/bin/env bash

bar() { for ((;;)){ 
      dunstify "<b>$(date '+%R')</b>  |  $(i3network) | $(i3batt)"\
      -t 10000 -r 90211; sleep 5
   } }

main() {
   bspc subscribe node_add node_remove desktop_focus |
      while read line; do
	 W=$(bspc query -N -n .local.\!floating | wc -l)
	 [[ $line != *remove* ]] && kill -9 $bar && dunstify -C 90211
	 (( W < 1 )) && sleep 1 && bar & bar="$!"
      done
}
main
