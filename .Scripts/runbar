#!/usr/bin/env bash

op="$1"

main(){
    [[ -z $op ]] && restartbar
    [[ $op == "toggle" ]] && togglebar
}

togglebar(){ 
    if [[ -z $(pgrep -x polybar) ]];then
	restartbar 
    else
	killall -q polybar 
	bspc config bottom_padding 0
    fi
}

restartbar(){
    killall -q polybar
    while pgrep -u $UID -x polybar >/dev/null; do sleep 0.001; done
    bspc config bottom_padding 28
    polybar hvadend 2>/dev/null &
}
main
