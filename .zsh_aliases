alias vim="nvim"

alias r="ranger"

alias za="nvim ~/.zsh_aliases"

alias zrc="nvim ~/.zshrc"
alias rrc="nvim ~/.config/ranger/rc.conf"
alias vrc="nvim ~/.config/nvim/init.vim"
alias crc="nvim ~/.config/compton.conf"

alias xrc="nvim ~/.Xresources"
alias xr="xrdb ~/.Xresources"


alias timer="((s=$SECONDS)); while :; do echo $(($SECONDS-s)); sleep 1; done"

alias prc="nvim ~/.config/polybar/config"

#alias con="nvim ~/.config/i3/config"
alias con="nvim ~/.config/bspwm/bspwmrc"
alias src="nvim ~/.config/sxhkd/sxhkdrc"
alias brc="nvim ~/.config/i3/i3blocks.conf"

alias c="clear -x"
alias nf="clear -x && echo -e \ && neofetch"
alias y="yaourt"
alias p="sudo pacman"

alias la="ls -a"
alias lla="ls -la"

alias fastboot="sudo fastboot"
alias fr="fastboot reboot"
alias ff="fastboot flash"
alias ap="adb push"
alias rr="adb reboot recovery"

alias capstone="setsid wine ~/.wine/drive_c/Program\ Files\ \(x86\)/PASCO\ scientific/Capstone/Capstone.exe"
