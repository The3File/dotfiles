##		Startup			##
exec 		feh --bg-fill ~/.config/wall.png
exec_always 	compton -b
exec		wal -Rn
#exec_always 	xrdb ~/.Xresources
exec_always 	setxkbmap -layout dk -variant nodeadkeys setxkbmap -option caps:escape
#exec_always	xmodmap ~/.Xmodmap
exec 		dunst
exec 		networkd-dispatcher
exec 		networkd-notify
exec		notify-send "Boot succesfuld. Velkommen." -a "System"

##		General			##
set $mod Mod4
set $browser qutebrowser
set $browser2 chromium
set $term st
floating_modifier $mod
workspace_auto_back_and_forth yes

## Theme

font pango:Terminus 9
#new_window none

## Gaps
#smart_gaps on
gaps inner 9
gaps outer 3

#bindsym 	$mod+e 		gaps inner current set 9; gaps outer current set 3
#bindsym 	$mod+Shift+e 	gaps inner current set 0; gaps outer current set 0
#bindsym		$mod+g		gaps outer current plus 1; gaps inner current plus 3
#bindsym		$mod+Shift+g	gaps outer current minus 1; gaps inner current minus 3

## Borders	
#smart_borders on
new_window pixel 2

## Bar
exec_always --no-startup-id runbar
bindsym $mod+b exec --no-startup-id runbar toggle

